<main>

    <section id="home-page">
        <article class="auto-content">
            <h1>NEWS OF OUR</h1>
            <h2>ART GALLERY</h2>
        </article>
    </section>

    <section id="home-page-content">
        <h1>Statistics of shared publication</h1>
        <article class="home-page-content-publications">

            <!--If there are publications in the database, show the following view for each created publication-->
            {{#if publications}}
            {{#each publications}}
            <article class="content-publication">
                <h1>Title: {{title}}</h1>

                <!--If no one has shared the post yet, the number should be zero -->
                <p>Number of people shared the publication: {{shares}}</p>
                <a href="/publications/details/{{_id}}" class="image-details">View publication</a>
            </article>

            <!--If no one has shared the post yet, the number should be zero -->
            <!--<p>Number of people shared the publication: 0</p>-->
            <!--Otherwise, show the number -->
            {{/each}}
            {{else}}
        </article>

        <!--If there are no publications yet, show:-->
        article class="no-publication">
                        <h1>There are no publications yet.</h1>
                        <a href="/gallery" class="view-gallery">View Gallery</a>
                    </article>
        </article>
        {{/if}}
    </section>

</main>