<main>
    <section id="details-page">
        <h1>Details</h1>
        <article class="details-card">

            <article class="details-card-text">
                <h2>Title:<br> {{title}}</h2>
                <h3>Author: {{author.username}}</h3>
                <h3>Painting technique: {{paintingTechnique}}</h3>
                <h3>Certificate of authenticity: {{certificate}}</h3>

                {{#if currentUser}}
                <!-- If there is no registered user, do not display buttons-->
                <div class="buttons">
                    <!-- Only for registered user and author of the publication -->
                    {{#if isAuthor}}
                    <a href="/publications/edit/{{_id}}" class="btn-edit">Edit</a>
                    <a href="/publications/delete/{{_id}}" class="btn-delete">Delete</a>
                    {{else}}
                    {{#if isShared}}
                    <!-- logged in user who has already shared the publication-->
                    <p class="shared-pub">You already shared this publication</p>
                    {{else}}
                    <!-- logged in user who has not yet shared the publication-->
                    <a href="/publications/share/{{_id}}" class="btn-share">Share publication</a>
                    {{/if}}
                    {{/if}}
                </div>
                {{/if}}
            </article>

            <article class="details-card-image">
                <img src="{{artUrl}}" alt="art-image2">
            </article>

        </article>
    </section>
</main>